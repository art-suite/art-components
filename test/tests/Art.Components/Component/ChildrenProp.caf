import &StandardImport

suite: ->
  test "children passed to component-factory become @props.children", ->
    class Wrapper extends Component
      render: ->
        TestElement
          name: "wrapper"
          # log "propsChildren", @props.children
          TestElement name: "red"
          TestElement name: "blue"

    class MyComponent extends Component
      render: ->
        Wrapper
          TestElement name: "red"
          TestElement name: "blue"

    MyComponent()
    ._instantiate()
    .onNextReady ({element}) ->
      assert.eq element.props.name, :wrapper

      assert.eq
        :red :blue
        array child in element.children
          child.props.name

  test "baseline", ->

    class MyComponent extends Component
      render: ->
        TestElement
          TestElement name: "red"
          TestElement name: "blue"

    MyComponent()
    ._instantiate()
    .onNextReady ({element}) ->
      assert.eq
        2
        element.children.length
